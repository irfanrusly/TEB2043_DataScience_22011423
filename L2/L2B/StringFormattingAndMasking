# 3. get name and phone number
name <- readline("Enter your name: ")
phone <-readline("Enter your phone number: ")

# convert name to uppercase
name_upper <- toupper(name)

# Extract first 3 and last 4 digits
first_three <- substr(phone, 1, 3)
last_four <- substr(phone, nchar(phone) - 3, nchar(phone))

# Display formatted output
cat("Hi,", name_upper, "\n")
cat("A verification code has been sent to", first_three, "-xxxxx", last_four, "\n")
